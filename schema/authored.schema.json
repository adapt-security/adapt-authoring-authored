{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "authored",
  "description": "Adds properties relating to authoring",
  "$merge": {
    "with": {
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "isDate": true
        },
        "createdBy": {
          "type": "string",
          "isObjectId": true
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "isDate": true
        }
      },
      "required": ["createdAt","createdBy","updatedAt"]
    }
  }
}
