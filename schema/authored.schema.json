{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "authored",
  "description": "Adds properties relating to authoring",
  "$merge": {
    "with": {
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "isDate": true
        },
        "createdBy": {
          "type": "string",
          "isObjectId": true
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "isDate": true
        }
      },
      "required": ["createdAt","createdBy","updatedAt"]
    }
  }
}
